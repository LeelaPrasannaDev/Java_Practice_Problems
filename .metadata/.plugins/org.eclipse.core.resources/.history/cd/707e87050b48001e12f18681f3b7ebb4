package com.kodnest.anagram;

public class CheckAnagramOrNot {
	public void  anagramCheckMethod(String inputString1,String inputString2) 
	{
		sortMethod(inputString1);
		sortMethod2(inputString2);
		
	}

	private void sortMethod2( String inputString2) 
	{
		char [] brr = inputString2.toCharArray();
		char temp;
		for(int i=0;i<brr.length;i++)
		{
			for(int j=i+1;j<brr.length;j++)
			{
				if(brr[i]>brr[j])
				{
					temp = brr[i];
					brr[i]=brr[j];
					brr[j]=temp;
				}
			}
		}	
	}

	private void sortMethod(String inputString1)
	{
		char [] arr = inputString1.toCharArray();
		char temp;
		for(int i=0;i<arr.length;i++)
		{
			for(int j=i+1;j<arr.length;j++)
			{
				if(arr[i]>arr[j])
				{
					temp = arr[i];
					arr[i]=arr[j];
					arr[j]=temp;
				}
			}
		}
	}
}
