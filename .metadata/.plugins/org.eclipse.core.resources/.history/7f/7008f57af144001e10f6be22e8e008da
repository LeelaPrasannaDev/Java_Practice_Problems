package com.kodNest.Patterns;

import java.util.Scanner;

public class IncreasingTriangleStarPattern {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		System.out.println("Enter the number of columns and rows to print = ");
		int num = scan.nextInt();
		for(int i=1;i<=num;i++)
		{
			for(int j=0;j<=i;j++)
			{
				System.out.print("*"+" ");
			}
			System.out.println();
		}
	}

}
